{
    "name": "moztopia/lavackage",
    "description": "A Laravel 11+ Package used for helpers, commands, and other common frameworks.",
    "type": "library",
    "require": {
        "php": "^8.2 || ^8.3",
        "laravel/framework": ">=11.0"
    },
    "require-dev": {
        "orchestra/testbench": "^9.0",
        "pestphp/pest": "^3.0",
        "pestphp/pest-plugin-laravel": "^3.0"
    },
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Moztopia\\Lavackage\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "Moztopia",
            "email": "hello@moztopia.com"
        }
    ],
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Moztopia\\Lavackage\\LavackageServiceProvider"
            ]
        }
    },
    "keywords": [
        "laravel",
        "package",
        "commands",
        "logging",
        "moztopia"
    ],
    "homepage": "https://www.moztopia.com",
    "support": {
        "issues": "https://github.com/moztopia/lavackage/issues",
        "source": "https://github.com/moztopia/lavackage"
    }
}