{
    "name": "moztopia/lavackage",
    "description": "A Laravel 11+ Package used for helpers, commands, and other common frameworks.",
    "type": "library",
    "require": {
        "illuminate/support": "^11.0",
        "illuminate/console": "^11.0",
        "illuminate/log": "^11.0"
    },
    "require-dev": {
        "orchestra/testbench": "^9.0",
        "pestphp/pest": "^3.0",
        "pestphp/pest-plugin-laravel": "^3.0"
    },
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Moztopia\\Lavackage\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "Hello",
            "email": "hello@moztopia.com"
        }
    ],
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    }
}