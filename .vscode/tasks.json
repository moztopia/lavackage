{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Clean",
            "type": "shell",
            "command": "make clean",
            "group": "none"
        },
        {
            "label": "Build",
            "type": "shell",
            "command": "make",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "dependsOn": [
                "Clean"
            ],
            "problemMatcher": "$gcc"
        }
    ]
}